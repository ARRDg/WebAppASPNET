@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="leftWrap">
    <img class="logoWrap" src="~/img/logo.png" alt="logo" />
    <div class="imageLeftWrap">
        <img class="imageWrap" src="~/img/loginImage.svg" alt="loginImage" />
    </div>
</div>
<div class="rightWrap flex-column align-items-center justify-content-center">
    <div class="contentForm d-flex flex-column w-100 align-items-center">
        <span>Sign In</span>
    </div>

    <form class="formAuth" action="/" method="post">
        <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" placeholder="">
            <label for="floatingInput">Email</label>
        </div>

        <div class="form-floating">
            <input type="password" class="form-control" id="floatingInput" placeholder="">
            <label for="floatingInput">Password</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remember me
            </label>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Sign In</button>
    </form>

    <div class="linkAuth">
        <a href="/auth/404">Recover the password</a>
        <a href="/auth/register">Sign Up</a>
    </div>
</div>