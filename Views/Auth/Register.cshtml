@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<div class="leftWrap">
    <img class="logoWrap" src="~/img/logo.png" alt="logo" />
    <div class="imageLeftWrap">
        <img class="imageWrap" src="~/img/registerImage.svg" alt="registerImage" />
    </div>
</div>
<div class="rightWrap flex-column align-items-center">
    <div class="contentForm d-flex flex-column w-100 align-items-center">
        <span>Sign In</span>
         <form class="formAuth" action="/" method="post">
            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput">Name</label>
            </div>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput">Email</label>
            </div>

            <div class="form-floating">
                <input type="password" class="form-control" id="floatingInput" placeholder="">
                <label for="floatingInput">Password</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    I agree with the privacy policy and am familiar with the rules of joining
                </label>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>

         </form>

        <div class="linkAuth">
            <a href="/auth/login">I already have an account.</a>
         </div>
    </div>
</div>