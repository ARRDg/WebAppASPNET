@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "_AuthLayout";
}

<div class="contentForm d-flex flex-column w-100 align-items-center">
    <span class="headText">Регистрация</span>
    <form class="formAuth" asp-action="Register" asp-controller="Auth" method="post" id="form-register">
        <div class="form-floating">
            <input asp-for="Name" type="text" class="form-control" id="floatingName" name="Name" placeholder=" ">
            <label asp-for="Name" for="floatingName">Имя</label>
        </div>

        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" id="floatingEmail" name="Email" placeholder=" ">
            <label asp-for="Email" for="floatingEmail">Электронная почта</label>
        </div>

        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" name="Password" placeholder=" ">
            <label asp-for="Password" for="floatingPassword">Пароль</label>
        </div>

        <div class="form-check">
            <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" id="invalidCheck">
            <label asp-for="AgreeToTerms" class="form-check-label" for="invalidCheck">
                Я согласен с политикой конфиденциальности и ознакомлен с правилами участия
            </label>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Зарегистрироваться</button>
    </form>

    <div class="linkAuth">
        <a asp-controller="Auth" asp-action="Login">У меня уже есть аккаунт.</a>
    </div>
</div>