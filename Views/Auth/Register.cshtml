@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

@section Scripts {
    <script src="~/js/validateRegister.js"></script>
}

<div class="leftWrap">
    <img class="logoWrap" src="~/img/logo.png" alt="logo" />
    <div class="imageLeftWrap">
        <img class="imageWrap" src="~/img/registerImage.svg" alt="registerImage" />
    </div>
</div>
<div class="rightWrap flex-column align-items-center">
    <div class="contentForm d-flex flex-column w-100 align-items-center">
        <span class="headText">Sign Up</span>
        <form class="formAuth" asp-action="Register" asp-controller="Auth" method="post" id="form-register">
            <div class="form-floating">
                <input asp-for="Name" type="text" class="form-control" id="floatingName" name="Name" placeholder=" ">
                <label asp-for="Name" for="floatingName">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" id="floatingEmail" name="Email" placeholder=" ">
                <label asp-for="Email" for="floatingEmail">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" name="Password" placeholder=" ">
                <label asp-for="Password" for="floatingPassword">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" id="invalidCheck" required>
                <label asp-for="AgreeToTerms" class="form-check-label" for="invalidCheck">
                    I agree with the privacy policy and am familiar with the rules of joining
                </label>
                <span asp-validation-for="AgreeToTerms" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Sign Up</button>

         </form>

        <div class="linkAuth">
            <a asp-controller="Auth" asp-action="Login">I already have an account.</a>
         </div>
    </div>
</div>