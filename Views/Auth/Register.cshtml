@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "_AuthLayout";
}

<div class="contentForm d-flex flex-column w-100 align-items-center">
    <span class="headText">Регистрация</span>
    <form class="formAuth" asp-action="Register" asp-controller="Auth" method="post">
        <div class="form-floating">
            <input asp-for="Name" type="text" class="form-control" id="floatingName" placeholder=" ">
            <label asp-for="Name" for="floatingName">Имя</label>
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder=" ">
            <label asp-for="Email" for="floatingEmail">Электронная почта</label>
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder=" ">
            <label asp-for="Password" for="floatingPassword">Пароль</label>
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="form-check d-flex flex-column">
            <div class="d-flex align-items-center">
                <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" id="invalidCheck" required>
                <label asp-for="AgreeToTerms" class="form-check-label ms-2" for="invalidCheck">
                    Я согласен с политикой конфиденциальности и ознакомлен с правилами участия
                </label>
            </div>
            <span asp-validation-for="AgreeToTerms" class="text-danger small mt-1"></span>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Зарегистрироваться</button>
    </form>

    <div class="linkAuth justify-content-center">
        <a asp-controller="Auth" asp-action="Login">У меня уже есть аккаунт</a>
    </div>
</div>