@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<div class="leftWrap">
    <img class="logoWrap" src="~/img/logo.png" alt="logo" />
    <div class="imageLeftWrap">
        <img class="imageWrap" src="~/img/registerImage.svg" alt="registerImage" />
    </div>
</div>
<div class="rightWrap flex-column align-items-center">
    <div class="contentForm d-flex flex-column w-100 align-items-center">
        <span>Sign Up</span>
        <form class="formAuth" asp-action="Register" asp-controller="Auth" method="post">
            <div class="form-floating">
                <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="">
                <label asp-for="Name" for="floatingInput">Name</label>
            </div>

            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="">
                <label asp-for ="Email" for="floatingInput">Email</label>
            </div>

            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingInput" placeholder="">
                <label asp-for="Password" for="floatingInput">Password</label>
            </div>

            <div class="form-check">
                <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" value="remember-me" id="invalidCheck" required>
                <label asp-for="AgreeToTerms" class="form-check-label" for="invalidCheck">
                    I agree with the privacy policy and am familiar with the rules of joining
                </label>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Sign Up</button>

         </form>

        <div class="linkAuth">
            <a asp-controller="Auth" asp-action="Login">I already have an account.</a>
         </div>
    </div>
</div>